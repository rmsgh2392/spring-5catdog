<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.catdog.web.adm.AdminMapper">
   		<select id="access" resultType="Admin">
			SELECT *
			FROM ADMIN
			WHERE AID LIKE #{aid}
   		</select> 
			<!--  <if test="pwd != null"> 자바에서 pwd에 대한 값을 안해주면 if문 에 쿼리는 안보인다.
				AND PWD LIKE #{pwd}ff
			</if>-->
   		<select id="selectAdmin2" resultType="Admin" parameterType="hashMap">
   			SELECT *
   			FROM ADMIN
   		<trim prefix="WHERE" prefixOverrides="AND |OR ">
   			WHERE ${uid} LIKE #{uid}<!-- #은 ''가 포함도니거 $는 포함 안된것 -->
   			AND ${pwd} LIKE #{pwd}<!-- '${PWD}' 와 #{PWD}똑같고 '%${PWD}%' PWD에 A 값을 주면 A가 들어있는 값들을 다 불러옴  -->
   		</trim >
   		</select>
    </mapper>